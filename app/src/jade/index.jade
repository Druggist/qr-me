extends _template

block head
	link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
	link(href="https://fonts.googleapis.com/css?family=Pacifico", rel="stylesheet")
	link(href="static/css/magic.min.css", rel="stylesheet")
	script(src="components/webcomponentsjs/webcomponents.min.js")
	link(href="components/paper-color-picker/paper-color-circle.html", rel="import")
	link(href="components/paper-color-picker/paper-color-picker.html", rel="import")
	link(href="components/paper-color-picker/paper-color-input.html", rel="import")
block body
	.container
		.row
			.col.s12.m6.offset-m3
				.card-panel.row.slide-up
					h1 qr.me
				.card-panel.row.slide-up
					#qr.col.s12.hide
						button.btn.waves-effect.waves-light.right#return(type="button", name="return") Return
								i.material-icons.right reply
					form.col.s12
						.row
							.input-field.col.s12
								textarea#content.materialize-textarea
								label(for="content") Content
						.row
							.input-field.col.s12.m6
								paper-color-input#main(label="Main color", value='{"red":0,"green":0,"blue":0}')
							.input-field.col.s12.m6
								paper-color-input#bg(label="Background color", value='{"red":255,"green":255,"blue":255}')
						.row
							.input-field.col.s12
								input#rounded(type="checkbox")
								label(for="rounded") Rounded corners
						.row
							.input-field.col.s12
							button.btn.waves-light.right.disabled#submit(type="button", name="generate") Generate
								i.material-icons.right send

block script
	script(src="components/jquery/dist/jquery.min.js")
	script(src="components/materialize/dist/js/materialize.min.js")
	script(src="static/js/kjua-0.1.1.min.js")
	script(src="static/js/generate.min.js")
